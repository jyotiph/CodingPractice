/* Draw a staircase structure */

import java.util.Scanner;

public class Solution {
    public static void main(String[] args) {
        int n;
        Scanner s = new Scanner(System.in);
        n = s.nextInt();
        for(int i=0; i<n; i++){
            for(int j=(n-1-i); j>0; j--){
                System.out.print(" ");
            }
            for(int k=0; k<(i+1); k++){
                System.out.print("#");
            }
            System.out.println();
        }            
    }
}
